@model IEnumerable<Hospital_Link.Models.Doctor>
@{
    ViewBag.Title = "Location";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    @using Jmelosegui.Mvc.GoogleMap

<!-- Bootstrap -->


<h2>Location</h2>
@(
        Html.GoogleMap()
            .Name("map")
            .Height(500)
            .Center(c => c.Latitude(ViewBag.lat).Longitude(ViewBag.lon))


            .Markers(m => m.Add().Title("Hello World!"))
)


@section scripts
    {
    @(Html.GoogleMap().ScriptRegistrar())
}
