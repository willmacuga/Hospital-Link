@model Hospital_Link.Models.BloodBank
@{
    ViewBag.Title = "Requisition";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Bloodgoup A Form</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="jumbotron">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id, new { id = "", Value = @ViewBag.IDA })

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Blood_type, new { Value = "A" })

        @Html.EditorFor(model => model.Quantity, new { htmlAttributes = new { @class = "form-control     glyphicon-heart" } })
        @Html.ValidationMessageFor(model => model.Quantity, "", new { @class = "text-danger" })

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Hospital_Id, new { id = "", Value = @ViewBag.HospitalID })

        <input type="submit" value="submit" class="btn btn-default"/>
        </div>
        <script>
            $("submit").click(function () {
                $("_bloodgroupA").hide();
            });
        </script>
}