@model Hospital_Link.Models.BloodBank
@{
    ViewBag.Title = "Requisition";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
<h2>Bloodgoup A Form</h2>
@using (Ajax.BeginForm(new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "BGForm" }))

{
    @Html.AntiForgeryToken()
    <div class="jumbotron">
        <div class="row">
        <div class="col-sm-12 form-group">
            <div  class="col-lg-4 form-group "><img src="~/Content/newTemplate/img/Blood/blood1.jpg" width="100"height="100"/> A </div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id, new { id = "", Value = @ViewBag.IDA })

            @Html.ValidationSummary(true, "", new
                  {
                      @class = "text-danger"
                  })
            @Html.HiddenFor(model => model.Blood_type, new { Value = "A" })
            <div class="col-sm-4 form-group">
                @Html.EditorFor(model => model.Quantity, new { htmlAttributes = new { @class = "form-control ", placeholder = "Amount In bags..." } })
                @Html.ValidationMessageFor(model => model.Quantity, "", new { @class = "text-danger" })
            </div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Hospital_Id, new { id = "", Value = @ViewBag.HospitalID })
            </div>
            </div>
                <input type="submit" value="submit" class="btn btn-default" />
            
      

    </div>
