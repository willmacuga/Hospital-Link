@model Hospital_Link.Models.BloodBank
@{
    ViewBag.Title = "Requisition";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
<h2>Requisition Form</h2>
<div id="BGForm">
   @using (Ajax.BeginForm( new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "BGForm" }))

   {
    @Html.AntiForgeryToken()

    <div>
        @Html.Partial("_bloodgroupA", Model);
    </div>
    <div>
        @Html.Partial("_bloodgroupB", Model);
    </div>
    <div>
        @Html.Partial("_bloodgroupAB", Model);
    </div>
    
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>


    }
</div>
<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>