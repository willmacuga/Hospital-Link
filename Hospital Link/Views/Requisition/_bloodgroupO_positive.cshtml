
@model Hospital_Link.Models.BloodBank
@{
    ViewBag.Title = "Requisition";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>

@using (Ajax.BeginForm(new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "BGForm" }))

{
    @Html.AntiForgeryToken()
    <div class="jumbotron">
        <div class="row">
            <div class="col-sm-12 form-group">
                <div class="col-lg-4 form-group "><img src="~/Content/newTemplate/img/Blood/blood1.jpg" width="100" height="100" /> O+ </div>
                <div class="col-lg-4 form-group">
                    <label>Current Quantity:</label>
                    <label><U>@ViewBag.BloodGroup_O_Positive</U></label>
                </div>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id, new { id = "", Value = @ViewBag.IDOP })

                @Html.ValidationSummary(true, "", new
           {
               @class = "text-danger"

           })
                @Html.HiddenFor(model => model.Blood_type, new { Value = "O+" })
                <div class="col-sm-4 form-group">
                    @Html.EditorFor(model => model.Quantity, new { htmlAttributes = new { min = 0, max = @ViewBag.BloodGroup_O_Positive, @class = "form-control ", placeholder = "Amount In bags..." } })
                    @Html.ValidationMessageFor(model => model.Quantity, "", new { @class = "text-danger" })
                </div>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Hospital_Id, new { id = "", Value = @ViewBag.HospitalID })
            </div>
        </div>
        <input type="submit" value="submit" class="btn btn-default" />



    </div>
    @*<script>
            $("submit").click(function () {
                $("bgA").hide();
            });
        </script>*@
}
